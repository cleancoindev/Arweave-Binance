<% include ../partials/header %>
<div class="container">
    <div class="form-group-row">
        <h1 style="text-align: center; margin: 30px;">Edit Transaction</h1>
        <div style="width: 30%; margin: 25px auto;">
        <form action="/documents/<%= document_id%>/transactions/<%= transaction._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text"  name="transaction[type]" value="<%= transaction.type%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text"  name="transaction[reference]" value="<%= transaction.reference%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text"  name="transaction[amount]" value="<%= transaction.amount%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text"  name="transaction[status]" value="<%= transaction.status%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text"  name="transaction[remarks]" value="<%= transaction.remarks%>">
            </div>

            <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/documents">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>