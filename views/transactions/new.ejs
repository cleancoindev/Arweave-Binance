<% include ../partials/header %>
<div class="container">
    <div class="form-group-row">
        <h1 style="text-align: center; margin: 30px;">Add New Transaction to <%= document.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
        <form action="/documents/<%= document._id%>/transactions" method="POST">
            <div class="form-group">
                <input class="form-control" type="text"  name="transaction[type]" placeholder="type">
            </div>
            <div class="form-group">
                <input class="form-control" type="text"  name="transaction[reference]" placeholder="reference">
            </div>
            <div class="form-group">
                <input class="form-control" type="text"  name="transaction[amount]" placeholder="amount">
            </div>
            <div class="form-group">
                <input class="form-control" type="text"  name="transaction[status]" placeholder="status">
            </div>
            <div class="form-group">
                <input class="form-control" type="text"  name="transaction[remarks]" placeholder="remarks">
            </div>
            <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/documents">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>