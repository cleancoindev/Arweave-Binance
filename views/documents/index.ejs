<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
            <div class="container">
                <h1>Arweave</h1>
                <p>List of Members</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/documents/new">Add New</a>
                </p>
                <div class="row text-center" style="display:flex; flex-wrap: wrap;">
                        <div class="col-md-12">
                            <% if(noMatch !== null) { %>
                            <h3><%= noMatch %></h3>
                            <p>
                               <form id="search" action="/documents" method="GET" class="form-inline">
                                   <div class="form-group">
                                       <input type="text" name="search" placeholder="Create a query.." class="form-control">
                                       <input type="submit" value="Search" class="btn btn-default">
                                   </div>
                               </form>
                           </p>
                            <% } %>
                        </div>
            </div>
    </header>

    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% documents.forEach(function(document){%>
            <div class="col-md-3 col-sm-6">
                <div>
                    <div class="caption">
                        <h4><%= document.name %></h4>
                    </div>
                    <div class="caption">
                        <h4><%= document.lastname %></h4>
                    </div>
                    <p>
                        <a href="/documents/<%= document._id%>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div> 
  
   
<% include ../partials/footer%>